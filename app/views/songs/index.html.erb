<div class="jumbotron">
  <h1>jukeBox</h1>
  <p>Add your favorite tracks to the shared playlist</p>
  <% if !user_signed_in? %>
    <p><%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  <% end %>
</div>

<ul>
  <%= render @songs %>
</ul>

<% if can? :create, @song %>
  <%= link_to "Add a song", new_song_path, class: "btn btn-success btn-lg" %>
<% end %>
